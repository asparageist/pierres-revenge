@{
  Layout = "_Layout";
}

@using Revenge.Models
<div class='pageStyle'>
  <h1>Flavors</h1>

  @if (@Model.Count == 0)
  {
    <h3>No flavors have been added.</h3>
  }

  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorID })</li>
    }
  </ul>

  <p>@Html.ActionLink("Add a new flavor", "New")</p>
</div>