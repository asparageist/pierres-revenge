@{
  Layout = "_Layout";
}

@model Revenge.Models.Treat

<div class='pageStyle'>
  <h2>Flavors:</h2>

  @if (ViewBag.FlavorID != null && ((SelectList)ViewBag.FlavorID).Any())
  {

    @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.TreatID)

      @Html.DropDownList("FlavorID")

      <input type="submit" value="Save" />
    }
  }
  else
  {
    <p>no flavors yet!</p>
  }

  <p>@Html.ActionLink("Back to Treats", "Index")</p>
  <p>@Html.ActionLink("Check out flavors", "Index", "Flavor")</p>

</div>