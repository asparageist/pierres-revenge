@{
  Layout = "_Layout";
}

@using Revenge.Models
<div class='pageStyle'>

  <h1>Treats</h1>

  @if (@Model.Count == 0)
  {
    <h3>No treats have been added.</h3>
  }

  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatID })</li>
    }
  </ul>

  <p>@Html.ActionLink("Add a new treat", "New")</p>
  <p>@Html.ActionLink("Check out flavors", "Index", "Flavor")</p>

</div>